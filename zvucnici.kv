MDScreen:
    name: "zvucnici"
    MDFloatLayout:
        md_bg_color: 26/255.0, 26/255.0, 26/255.0, 1
        


    MDFloatLayout:
        Image:
            source: "shape41.png"
            size_hint: 1, 1 
            pos_hint: {"top":1.47}

    MDIconButton:
        icon: "arrow-left"
        icon_color: rgba(255, 255, 255, 255)
        pos_hint: {"center_x": .1,"center_y": .05}
        user_font_size: "30sp"
        theme_text_color: "Custom"
        text_color: rgba(255, 255, 255, 255)
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "signup"

    MDFloatLayout:
        MDLabel:
            size_hint: 0.8, 0.1
            text: "Zvučnici"
            font_size: self.width/15
            pos_hint: {"x":0.09, "top":0.98}
            font_name: "futur2"
            color: rgba(255, 255, 255, 255)
            halign: "center"

    Button:
        text: "Šta uraditi kada zvučnik ne daje zvuk?"
        size_hint: .86, .08
        pos_hint: {"center_x": .5, "center_y": .75}
        background_color: 0, 0, 0, 0
        color: rgba(0, 0, 0, 255)
        font_name: "futur2"
        on_release:
            root.manager.transition = FadeTransition()
            app.show_MDDialog5()
        canvas.before:
            Color:
                rgb: rgba(255, 255, 255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius:[26]