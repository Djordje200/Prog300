    Button:
        text: "Kreni"
        size_hint: .30, .057
        pos_hint: {"center_x": .5, "center_y": .17}
        background_color: 0, 0, 0, 0
        font_name: "Futur"
        on_release:
            root.manager.transition = FadeTransition()
            root.manager.current = "signup"
        canvas.before:
            Color:
                rgb: rgba(25, 116, 104, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius:[26]   
    

  
        