MDScreen:
    name: "signup"
    MDFloatLayout:
        md_bg_color: 26/255.0, 26/255.0, 26/255.0, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

    MDFloatLayout:
        Image:
            source: "test3.png"
            size_hint: 0.2, 0.2   
            pos_hint: {"x":0.4, "top":1.02}

    MDFloatLayout:
        Image:
            source: "shape3.png"
            size_hint: 1, 1 
            pos_hint: {"x":0.07, "top":0.9}
    
    MDFloatLayout:
        MDLabel:
            size_hint: 0.9, 0.1
            text: "Techeeto"
            font_size: self.width/11
            pos_hint: {"x":0.055, "top":0.9}
            font_name: "futur"
            color: rgba(255, 255, 255, 255)
            halign: "center"            

    MDFloatLayout:
        MDLabel:
            size_hint: 0.8, 0.1
            text: "izaberite kategoriju sa kojom imate poteškoće"
            font_size: self.width/15
            pos_hint: {"x":0.09, "top":0.84}
            font_name: "futur3"
            color: rgba(222, 222, 222, 255)
            halign: "center" 
    Button:
        text: "Telefoni"
        size_hint: .40, .15
        pos_hint: {"center_x": .27, "center_y": .65}
        background_color: 0, 0, 0, 0
        font_name: "futur2"
        on_release:
            root.manager.transition = FadeTransition()
            root.manager.current = "telefoni"
        canvas.before:
            Color:
